root = true

[*]
charset                  = utf-8
end_of_line              = lf
max_line_length          = 120
indent_style             = space
indent_size              = 2
tab_width                = 2
trim_trailing_whitespace = true
insert_final_newline     = true
# IntelliJ IDEA only
ij_smart_tabs               = false
ij_continuation_indent_size = 4
ij_formatter_off_tag        = @formatter:off
ij_formatter_on_tag         = @formatter:on

[*.md]
trim_trailing_whitespace = false

[{*.bat,*.ps1,*.cmd}]
end_of_line = crlf

[Makefile]
indent_style = tab
